<!DOCTYPE html>

<html>

  <head>
    <title>FakeflixAdmin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <div><%= link_to "Home", admin_root_path %></div>
      <ul>
        <li><%= link_to "Movies", admin_movies_path %></li>
        <li><%= link_to "Series", admin_series_index_path %></li>
        <li><%= link_to "Rentals", admin_rentals_path %></li>
      </ul>

    </nav>
    <% if flash[:notice] %>
      <p class="flash-notice"><%= flash[:notice] %></p>
    <% end %>
    <%= yield %>
  </body>
</html>


