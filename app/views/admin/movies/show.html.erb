<h1><%= @movie.title %></h1>
<p><%= @movie.description %></p>
<p><%= @movie.rating %></p>
<p><%= @movie.duration %></p>
<p><%= @movie.price %></p>
<p><%= @movie.status %></p>
<p><%= @movie.progress %></p>

<%= link_to "Movies List", admin_movies_path %>

<% if user_signed_in?  %>
  <%= link_to "Delete", admin_movie_path(@movie), method: :delete, data: { confirm: "Really delete the movie?" }%>
<% end %>

<% if user_signed_in?  %>
  <%= link_to "Edit", edit_admin_movie_path(@movie)%>
<% end %>



